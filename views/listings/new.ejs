<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <br />
                <br />
                <h3>Create A New Listing</h3>
                <form method="POST" 
                    action="/listings" 
                    novalidate 
                    class="needs-validation"
                     enctype="multipart/form-data" > <!-- This is Used To Accept Data as files too -->
                    <br>
                    <div>
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" placeholder="enter title" type="text" class="form-control"
                            required>
                        <div class="valid-feedback">Title Looks Good!</div>
                        <div class="invalid-feedback">Title Is Required!</div>
                    </div>
                    <br>
                    <br>
                    <div>
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" placeholder="enter description" class="form-control"
                            required></textarea>
                        <div class="valid-feedback">Nice Description!</div>
                        <div class="invalid-feedback">Description Is Required!</div>
                    </div>
                    <br>
                    <br>
                    <div>
                        <label for="image" class="form-label">Upload Listing Image</label>
                        <input name="listing[image]" type="file" class="form-control" required>
                    </div>
                    <br>
                    <br>
                    <div class="row">
                        <div class="col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" placeholder="enter price" type="text" class="form-control"
                                required>
                            <div class="invalid-feedback">Please Enter A Valid Price!</div>
                        </div>
                        <div class="col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input name="listing[country]" placeholder="enter country" type="text" class="form-control"
                                required>
                            <div class="invalid-feedback">Please Enter A Valid Country!</div>
                        </div>
                    </div>
                    <br>
                    <br>
                    <div>
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" placeholder="enter location" type="text" class="form-control"
                            required>
                        <div class="invalid-feedback">Please Enter A Valid Location!</div>
                    </div>
                    <br>
                    <br>
                    <button class="add-btn btn btn-dark">Add</button>
                    <br>
                    <br>
                </form>
            </div>
        </div>
    </body>